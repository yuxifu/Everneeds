<resources>

    <style name="AppTheme" parent="AppTheme.Used" />

    <style name="AppTheme.Used" parent="AppTheme.Wechat" />
    <style name="AppTheme.DarkActionBar.Used" parent="AppTheme.Wechat.DarkActionBar" />

    <style name="AppTheme.TransNav" parent="AppTheme.Used" />

    <!-- theme wechat -->
    <style name="AppTheme.Wechat" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_wechat</item>
        <item name="colorPrimaryDark">@color/primary_dark_wechat</item>
        <item name="colorAccent">@color/accent_wechat</item>
    </style>

    <!-- theme wechat - action bar -->
    <style name="AppTheme.Wechat.DarkActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_wechat</item>
        <item name="colorPrimaryDark">@color/primary_dark_wechat</item>
        <item name="colorAccent">@color/accent_wechat</item>
    </style>

    <!-- theme white -->
    <style name="AppTheme.White" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_white</item>
        <item name="colorPrimaryDark">@color/primary_dark_white</item>
        <item name="colorAccent">@color/accent_white</item>
    </style>

    <!-- theme blue grey -->
    <style name="AppTheme.BlueGray" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue_grey</item>
        <item name="colorPrimaryDark">@color/primary_dark_blue_grey</item>
        <item name="colorAccent">@color/accent_blue_grey</item>
    </style>

    <!-- theme green -->
    <style name="AppTheme.Green" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <!-- theme purple -->
    <style name="AppTheme.Purple" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_dark_purple</item>
        <item name="colorAccent">@color/accent_purple</item>
    </style>

    <!-- theme for splash screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- card dimens -->
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.ProductContent" parent="android:Widget">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
